    <!-- bootstap bundle js -->
    <script src="/dash/assets/vendor/bootstrap/js/bootstrap.bundle.js" ></script >
    <!-- slimscroll js -->
    <script src="/dash/assets/vendor/slimscroll/jquery.slimscroll.js" ></script >
    <!-- main js -->
    <script src="/dash/assets/libs/js/main-js.js" ></script >
