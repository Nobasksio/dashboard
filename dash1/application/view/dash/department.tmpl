    <script src="/dash/assets/vendor/charts/c3charts/c3.min.js" ></script >
    <script src="/dash/assets/vendor/charts/c3charts/d3-5.4.0.min.js" ></script >
    <script src="/dash/assets/vendor/charts/c3charts/C3chartjs.js" ></script >
    <script src="/dash/assets/libs/js/dashboard-ecommerce.js" ></script >

    <script type="application/javascript" >


        new Morris.Line({
            // ID of the element in which to draw the chart.
            element: 'myfirstchartK',
            // Chart data records -- each entry in this array corresponds to a point on
            // the chart.
            data: [
                {% for one_month in to_json %}
                {
                    {% for str in one_month %}
                    {% for key, info_year in str %}
                    '{{ key }}': "{{ info_year }}",
                    {% endfor %}
                    {% endfor %}
                },
                {% endfor %}]
            ,
            lineColors: ['#a2b3bf', '#5969ff', '#64b764'],
            trendLineColors: ['#a2b3bf', '#5969ff', '#64b764'],
            // The name of the data record attribute that contains x-values.
            xkey: '{{ separator_name }}',
            // A list of names of data record attributes that contain y-values.
            ykeys: ['2018', '2019'],
            // Labels for the ykeys -- will be displayed when you hover over the
            // chart.
            labels: ['2018', '2019'],
            parseTime: false

        })
        new Morris.Line({
            // ID of the element in which to draw the chart.
            element: 'fot',
            // Chart data records -- each entry in this array corresponds to a point on
            // the chart.
            data: [
                {% for one_month in json_fot %}
                {
                    {% for str in one_month %}
                    {% for key, info_year in str %}
                    '{{ key }}': "{{ info_year }}",
                    {% endfor %}
                    {% endfor %}
                },
                {% endfor %}]
            ,
            lineColors: ['#a2b3bf', '#5969ff', '#64b764'],
            trendLineColors: ['#a2b3bf', '#5969ff', '#64b764'],
            // The name of the data record attribute that contains x-values.
            xkey: '{{ separator_name }}',
            // A list of names of data record attributes that contain y-values.
            ykeys: ['2018', '2019'],
            // Labels for the ykeys -- will be displayed when you hover over the
            // chart.
            labels: ['2018', '2019'],
            parseTime: false

        })
        new Morris.Line({
            // ID of the element in which to draw the chart.
            element: 'ss',
            // Chart data records -- each entry in this array corresponds to a point on
            // the chart.
            data: [
                {% for one_month in json_ss %}
                {
                    {% for str in one_month %}
                    {% for key, info_year in str %}
                    '{{ key }}': "{{ info_year }}",
                    {% endfor %}
                    {% endfor %}
                },
                {% endfor %}]
            ,
            lineColors: ['#a2b3bf', '#5969ff', '#64b764'],
            trendLineColors: ['#a2b3bf', '#5969ff', '#64b764'],
            // The name of the data record attribute that contains x-values.
            xkey: '{{ separator_name }}',
            // A list of names of data record attributes that contain y-values.
            ykeys: ['2018', '2019'],
            // Labels for the ykeys -- will be displayed when you hover over the
            // chart.
            labels: ['2018', '2019'],
            parseTime: false

        })


    </script >
